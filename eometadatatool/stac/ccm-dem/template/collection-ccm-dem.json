{
  "stac_version": "1.1.0",
  "stac_extensions": [
    "https://stac-extensions.github.io/alternate-assets/v1.2.0/schema.json",
    "https://stac-extensions.github.io/authentication/v1.1.0/schema.json",
    "https://stac-extensions.github.io/product/v0.1.0/schema.json",
    "https://stac-extensions.github.io/projection/v2.0.0/schema.json",
    "https://stac-extensions.github.io/storage/v2.0.0/schema.json"
  ],
  "id": "ccm-dem",
  "type": "Collection",
  "title": "Copernicus Contributing Missions DEM",
  "description": "The Digital Elevation Model (DEM) provided within the Copernicus Contributing Missions (CCM) offers a 3D representation of the Earth's surface derived from satellite data. This dataset supports a wide range of Copernicus services, including terrain analysis, hydrological modeling, spatial planning, and emergency response. The DEM features high spatial accuracy and is designed to meet the needs of analytical and operational applications.",
  "extent": {
    "spatial": {
      "bbox": [[-180, -90, 180, 90]]
    },
    "temporal": {
      "interval": [["2010-12-12T04:04:32Z", null]]
    }
  },
  "license": "other",
  "keywords": [
    "Copernicus",
    "ESA",
    "EU",
    "Imagery",
    "DEM",
    "Radar",
    "Satellite",
    "CCM"
  ],
  "providers": [
    {
      "name": "ESA",
      "roles": ["producer", "licensor"],
      "url": "https://www.esa.int/Applications/Observing_the_Earth/Copernicus/Copernicus_Contributing_Missions"
    },
    {
      "name": "CloudFerro",
      "roles": ["host", "processor"],
      "url": "https://cloudferro.com/"
    }
  ],
  "auth:schemes": {
    "oidc": {
      "type": "openIdConnect",
      "openIdConnectUrl": "https://identity.dataspace.copernicus.eu/auth/realms/CDSE/.well-known/openid-configuration"
    },
    "s3": {
      "type": "s3"
    }
  },
  "storage:schemes": {
    "cdse-s3": {
      "title": "Copernicus Data Space Ecosystem S3",
      "description": "This endpoint provides access to EO data which is stored on the object storage of both CloudFerro Cloud and OpenTelekom Cloud (OTC). See the [documentation](https://documentation.dataspace.copernicus.eu/APIs/S3.html) for more information, including how to get credentials.",
      "platform": "https://eodata.dataspace.copernicus.eu",
      "requester_pays": false,
      "type": "custom-s3"
    },
    "creodias-s3": {
      "title": "CREODIAS S3",
      "description": "Comprehensive Earth Observation Data (EODATA) archive offered by CREODIAS as a commercial part of CDSE, designed to provide users with access to a vast repository of satellite data without predefined quota limits.",
      "platform": "https://eodata.cloudferro.com",
      "requester_pays": true,
      "type": "custom-s3"
    }
  },
  "assets": {
    "thumbnail": {
      "href": "https://s3.waw3-2.cloudferro.com/swift/v1/stac-png/CCM_DEM.jpg",
      "type": "image/jpeg",
      "proj:shape": [360, 640],
      "roles": ["thumbnail"],
      "title": "Copernicus Contributing Missions DEM"
    }
  },
  "summaries": {
    "product:acquisition_type": ["nominal"],
    "sar:polarizations": ["HH"],
    "instruments": ["sar"],
    "product:type": [
      "SAR_DGE_10",
      "SAR_DGE_30",
      "SAR_DGE_90",
      "SAR_DTE_30",
      "SAR_INS_10"
    ]
  },
  "item_assets": {
    "Product": {
      "title": "Zipped product",
      "type": "application/zip",
      "roles": ["data", "metadata", "archive"],
      "auth:refs": ["oidc"]
    },
    "Circulation report": {
      "title": "Circulation report",
      "type": "application/xml",
      "roles": ["metadata"],
      "auth:refs": ["s3"],
      "alternate:name": "S3",
      "alternate": {
        "https": {
          "alternate:name": "HTTPS",
          "auth:refs": ["oidc"],
          "storage:refs": []
        }
      },
      "storage:refs": ["cdse-s3", "creodias-s3"]
    }
  },
  "links": [
    {
      "rel": "license",
      "type": "application/pdf",
      "href": "https://www.rapidresponse.copernicus.eu/app_content/uploads/ESA_User_Licence.pdf",
      "title": "ESA User License for Copernicus Contributing Missions Data (PDF)"
    }
  ]
}
